@model leave_management.Models.CreateLeaveAllocationViewModel

@{
    ViewData["Title"] = "Index";
}

<table class="table" id="tblData">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="SetLeave" asp-route-id="@item.Id" class="btn btn-outline-dark">
                    <i class="fas fa-user-edit" aria-hidden="true"></i> Allocate To Employees
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
